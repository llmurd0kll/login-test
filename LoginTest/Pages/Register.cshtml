@page
@model LoginTest.Pages.RegisterModel
@{
    ViewData["Title"] = "Register a test account";
    Layout = "_Layout";
    }

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h1 class="h4 mb-4">Register a test account</h1>

                    <form method="post" novalidate>
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <input asp-for="Input.Email" type="email" class="form-control" autocomplete="email" />
                            <span class="text-danger" asp-validation-for="Input.Email"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label">Password</label>
                            <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" />
                            <span class="text-danger" asp-validation-for="Input.Password"></span>
                        </div>

                        <button type="submit" class="btn btn-success w-100">Create</button>
                    </form>

                    @if (Model.Result != null)
                        {
                        <div class="mt-3 alert @(Model.Result.IsSuccess ? "alert-success" : "alert-danger")" role="alert">
                            @Model.Result.Message
                            @if (!string.IsNullOrEmpty(Model.Result.EntityDetails))
                                {
                                <pre class="mt-2 small mb-0">@Model.Result.EntityDetails</pre>
                                }
                        </div>
                        }

                    <div class="mt-3">
                        <a class="btn btn-link p-0" href="/">Back to login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

    @section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }
